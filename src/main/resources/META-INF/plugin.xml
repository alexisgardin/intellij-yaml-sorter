<idea-plugin>
    <id>com.github.alexisgardin.intellijyamlsorter</id>
    <name>yaml-sorter</name>
    <vendor>alexisgardin</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>


    <actions>
        <action id="com.github.alexisgardin.intellij.yaml.sorter.SortYamlAction"
                class="com.github.alexisgardin.intellij.yaml.sorter.SortYamlAction" text="Sort Yaml"
                description="Sort your yaml">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
